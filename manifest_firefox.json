{
  "manifest_version": 2,
  "name": "Wallabag Saver",
  "version": "1.0.2",
  "description": "Save pages to one or more Wallabag servers.",
  "permissions": [
  "storage",
  "tabs",
  "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
