{
	"manifest_version": 3,
	"name": "Wallabag Saver",
	"version": "1.0.2",
	"description": "Save pages to one or more Wallabag servers.",
	"permissions": [
		"storage",
		"tabs"
	],
	"host_permissions": [
		"<all_urls>"
	],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icon16.png",
			"48": "icon48.png",
			"128": "icon128.png"
		}
	},
	"options_page": "options.html",
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	}
}
